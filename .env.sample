# =============================================================================
# DhafnckMCP Environment Configuration Template
# =============================================================================
# Copy to .env and configure for your deployment (CapRover/Production priority)
# =============================================================================

# =============================================================================
# GENERAL SETTINGS
# =============================================================================
ENV=production

APP_DEBUG=false
APP_LOG_LEVEL=INFO
NODE_ENV=production

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================

# -----------------------------------------------------------------------------
# Database (PostgreSQL Required)
# -----------------------------------------------------------------------------
DATABASE_TYPE=postgresql
DATABASE_HOST=db.example.com
DATABASE_PORT=5432
DATABASE_NAME=dhafnck_mcp
DATABASE_USER=postgres
DATABASE_PASSWORD=your_secure_password_here
# Run on caprover intern must set disable
DATABASE_SSL_MODE=disable

# Auto-initialize database on startup
AUTO_MIGRATE=false

# -----------------------------------------------------------------------------
# Server Settings
# -----------------------------------------------------------------------------
FASTMCP_HOST=0.0.0.0
FASTMCP_PORT=8000
JWT_SECRET_KEY=your_jwt_secret_key_at_least_32_chars_long_for_production

# -----------------------------------------------------------------------------
# Authentication (Keycloak)
# -----------------------------------------------------------------------------
AUTH_ENABLED=true
AUTH_PROVIDER=keycloak
KEYCLOAK_URL=https://auth.example.com
KEYCLOAK_REALM=dhafnck-mcp
KEYCLOAK_CLIENT_ID=mcp-backend
KEYCLOAK_CLIENT_SECRET=your_keycloak_backend_client_secret_here

# -----------------------------------------------------------------------------
# CORS
# -----------------------------------------------------------------------------
CORS_ORIGINS=https://app.example.com,https://api.example.com
CORS_ALLOW_CREDENTIALS=true

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
FEATURE_VISION_SYSTEM=true
FEATURE_HIERARCHICAL_CONTEXT=true
FEATURE_MULTI_AGENT=true
FEATURE_RATE_LIMITING=true
FEATURE_REQUEST_LOGGING=false

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# -----------------------------------------------------------------------------
# Frontend Settings
# -----------------------------------------------------------------------------
FRONTEND_PORT=3800
VITE_API_URL=https://api.example.com
VITE_BACKEND_URL=https://api.example.com
VITE_ENVIRONMENT=production

# -----------------------------------------------------------------------------
# Frontend Authentication
# -----------------------------------------------------------------------------
VITE_KEYCLOAK_URL=https://auth.example.com
VITE_KEYCLOAK_REALM=dhafnck-mcp
VITE_KEYCLOAK_CLIENT_ID=mcp-frontend

# =============================================================================
# AI PATHS
# =============================================================================
AI_DATA=logs
AI_DOCS=ai_docs

# =============================================================================
# DEPLOYMENT NOTES
# =============================================================================
# PRODUCTION CHECKLIST:
# ✅ Use strong passwords (32+ chars for JWT_SECRET_KEY)
# ✅ Set DATABASE_SSL_MODE=disable for CapRover, require for managed services
# ✅ Configure CORS_ORIGINS for your domains
# ✅ Enable FEATURE_RATE_LIMITING=true
# ✅ Use HTTPS URLs for all services
# ✅ Set AUTO_MIGRATE=false (manual migrations)
#
# SSL OPTIONS:
# - disable: For local PostgreSQL or CapRover PostgreSQL (no SSL support)
# - require: For managed PostgreSQL services (AWS RDS, Google Cloud SQL, etc.)
# - prefer: Try SSL first, fallback to no SSL (not recommended for production)
#
# CAPROVER: Create PostgreSQL app first, then deploy backend/frontend
# LOCAL DEV: Set ENV=development, DATABASE_HOST=localhost, AUTO_MIGRATE=true
# =============================================================================