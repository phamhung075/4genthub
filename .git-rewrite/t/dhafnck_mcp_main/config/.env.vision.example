# Vision System Environment Variables
# Copy this file to .env to configure Vision System features

# Master Vision System Switch
DHAFNCK_ENABLE_VISION=true

# Phase-Specific Switches (override master switch)
DHAFNCK_VISION_CONTEXT_ENFORCEMENT=true
DHAFNCK_VISION_PROGRESS_TRACKING=true
DHAFNCK_VISION_WORKFLOW_HINTS=true
DHAFNCK_VISION_AGENT_COORDINATION=true
DHAFNCK_VISION_ENRICHMENT=true

# Configuration File Paths
DHAFNCK_VISION_CONFIG_PATH=./config/vision_system_config.yaml
DHAFNCK_VISION_HIERARCHY_PATH=./vision_orchestration/configuration/vision_hierarchy.yaml

# Performance Settings
DHAFNCK_VISION_CACHE_ENABLED=true
DHAFNCK_VISION_CACHE_TTL=3600
DHAFNCK_VISION_MAX_OVERHEAD_MS=100

# Feature Flags
DHAFNCK_VISION_EXPERIMENTAL_AI_HINTS=false
DHAFNCK_VISION_PREDICTIVE_ASSIGNMENT=false

# Monitoring
DHAFNCK_VISION_LOG_LEVEL=INFO
DHAFNCK_VISION_METRICS_ENABLED=true

# Integration Mode
# "enhanced" - Use Vision System enhanced tools only
# "combined" - Use both standard and enhanced tools
# "standard" - Use standard tools only (Vision System disabled)
DHAFNCK_VISION_INTEGRATION_MODE=combined