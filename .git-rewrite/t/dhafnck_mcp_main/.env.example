# ============================================================
# DHAFNCK MCP ENVIRONMENT CONFIGURATION
# ============================================================
# Copy this file to .env and fill in your values

# JWT Authentication
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30
JWT_ISSUER=dhafnck-mcp
# JWT_AUDIENCE is not configurable - defaults to 'mcp-server' internally

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/dhafnck_mcp
MCP_DB_PATH=./data/dhafnck_mcp.db

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
PORT=8000

# Docker Settings
DOCKER_ENV=development
USE_DOCKER_DB=true

# Frontend URL
FRONTEND_URL=http://localhost:3800

# API Keys (if needed)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=