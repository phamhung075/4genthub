# =============================================================================
# DhafnckMCP Environment Configuration Template
# =============================================================================
# Copy this template to create your environment configuration
# Fill in all values according to your environment

# =============================================================================
# Environment Settings
# =============================================================================
ENV=development
APP_ENV=development
APP_DEBUG=true
APP_LOG_LEVEL=INFO
NODE_ENV=development

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_TYPE=postgresql
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=dhafnck_mcp
DATABASE_USER=postgres
DATABASE_PASSWORD=your_secure_password_here
DATABASE_SSL_MODE=prefer

# Auto-initialize database on startup
AUTO_MIGRATE=true

# =============================================================================
# MCP Server Configuration
# =============================================================================
MCP_HOST=0.0.0.0
MCP_PORT=8001
FASTMCP_HOST=0.0.0.0
FASTMCP_PORT=8000
JWT_SECRET_KEY=your_jwt_secret_key_here_must_be_long_and_secure

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=http://localhost:3800,http://localhost:8000,http://localhost:8001
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# Keycloak Authentication
# =============================================================================
AUTH_ENABLED=true
AUTH_PROVIDER=keycloak
EMAIL_VERIFIED_AUTO=true
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=dhafnck-mcp
KEYCLOAK_CLIENT_ID=mcp-backend
KEYCLOAK_CLIENT_SECRET=your_keycloak_client_secret_here
KEYCLOAK_VERIFY_TOKEN_AUDIENCE=true
KEYCLOAK_TOKEN_CACHE_TTL=300
KEYCLOAK_PUBLIC_KEY_CACHE_TTL=3600
KEYCLOAK_SSL_VERIFY=true

# =============================================================================
# Frontend Configuration
# =============================================================================
FRONTEND_PORT=3800
VITE_API_URL=http://localhost:8000
VITE_BACKEND_URL=http://localhost:8000
VITE_KEYCLOAK_URL=http://localhost:8080
VITE_KEYCLOAK_REALM=dhafnck-mcp
VITE_KEYCLOAK_CLIENT_ID=mcp-frontend
VITE_ENVIRONMENT=development

# =============================================================================
# Feature Flags
# =============================================================================
FEATURE_VISION_SYSTEM=true
FEATURE_HIERARCHICAL_CONTEXT=true
FEATURE_AUTO_COMPACT=true
FEATURE_MULTI_AGENT=true
FEATURE_RATE_LIMITING=true
FEATURE_REQUEST_LOGGING=true

# =============================================================================
# PgAdmin Configuration (Optional)
# =============================================================================
PGADMIN_EMAIL=admin@dhafnck.com
PGADMIN_PASSWORD=AdminPassword2025!

# =============================================================================
# Docker Container Names (Optional)
# =============================================================================
POSTGRES_CONTAINER_NAME=dhafnck-postgres
POSTGRES_DATA_VOLUME=dhafnck_postgres_data
POSTGRES_BACKUP_VOLUME=dhafnck_postgres_backup

# =============================================================================
# AI Documentation Paths
# =============================================================================
AI_DATA=logs
AI_DOCS=ai_docs

# =============================================================================
# Notes:
# =============================================================================
# 1. All passwords should be strong and unique
# 2. JWT_SECRET_KEY should be at least 32 characters
# 3. Update KEYCLOAK_URL to match your Keycloak server
# 4. CORS_ORIGINS should include all client URLs
# 5. For production, set APP_DEBUG=false and ENV=production
# 6. Database credentials must match across all services
# =============================================================================