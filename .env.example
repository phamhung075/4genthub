# =============================================================================
# ENVIRONMENT TEMPLATE FILE - COPY TO .env AND FILL IN REAL VALUES
# =============================================================================
# This file should be committed to git as a reference template
# NEVER put real credentials in this file!

# =============================================================================
# AUTHENTICATION
# =============================================================================
AUTH_ENABLED=true
MCP_AUTH_MODE=keycloak
KEYCLOAK_URL=https://your-keycloak-server.com
KEYCLOAK_REALM=your-realm
KEYCLOAK_CLIENT_ID=your-client-id
KEYCLOAK_CLIENT_SECRET=your-client-secret-here

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_TYPE=postgresql
DATABASE_HOST=srv-captain--dhafnck-postgres
DATABASE_PORT=5432
DATABASE_NAME=dhafnck_mcp
DATABASE_USER=your-db-user
DATABASE_PASSWORD=your-secure-db-password-here
DATABASE_URL=postgresql://user:password@srv-captain--dhafnck-postgres:5432/dhafnck_mcp

# =============================================================================
# JWT SECRETS
# =============================================================================
JWT_SECRET_KEY=generate-a-64-character-random-string-here
MCP_SECRET_KEY=generate-another-64-character-random-string-here

# =============================================================================
# REDIS (OPTIONAL)
# =============================================================================
REDIS_ENABLED=true
REDIS_HOST=srv-captain--dhafnck-redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-here

# =============================================================================
# APPLICATION URLS
# =============================================================================
FRONTEND_URL=https://dhafnck-mcp-frontend.your-domain.com
BACKEND_URL=https://dhafnck-mcp-backend.your-domain.com

# =============================================================================
# EMAIL (OPTIONAL)
# =============================================================================
EMAIL_ENABLED=false
FASTMCP_TRANSPORT=streamable-http
SMTP_HOST=your-smtp-server.com
SMTP_PORT=587
SMTP_USERNAME=your-email@domain.com
SMTP_PASSWORD=your-email-password-here